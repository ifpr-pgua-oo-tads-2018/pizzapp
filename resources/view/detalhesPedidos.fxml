<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pizzapp.control.DetalhesPedidos"
            prefHeight="400.0" prefWidth="600.0">


    <content>
        <VBox spacing="20">
            <TableView fx:id="tbPedidos" onMouseClicked="#mostraDetalhe">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn
                        fx:id="tcPedidoData"
                        text="Data"/>
                    <TableColumn
                            fx:id="tcPedidoCliente"
                            text="Cliente"/>
                    <TableColumn
                        fx:id="tcPedidoValor"
                        text="Valor (R$)" minWidth="70" maxWidth="70"/>
                </columns>
            </TableView>

            <TableView fx:id="tbDetalhesPedido" >
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn
                            fx:id="tcPizzaSabor"
                            text="Sabor"/>
                    <TableColumn
                            fx:id="tcPizzaValor"
                            text="Valor" minWidth="70" maxWidth="70"/>
                </columns>
            </TableView>        </VBox>
    </content>


</DialogPane>
